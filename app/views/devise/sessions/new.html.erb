<div class="container">
  <br>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <center><%=image_tag("letterhead.jpg", height: 200, width: 600) %></center>
      
      <br>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <%=render 'layouts/flash' %>
    <div class="panel panel-default">
      <div class="panel-body">
      <br>
      <%= simple_form_for(resource, as: resource_name, :url => session_path(resource_name),
        wrapper_mappings: {boolean: :vertical_boolean }) do |f| %>
        <%=image_tag("logo.png", height: 140, width: 140, class: 'img-circle img-responsive center-block') %>
        <br>
        <br>
        <%= f.input :email, placeholder: "Email", input_html:{class: "form-control"}, label: false %>
        <%= f.input :password, placeholder: "Password",  input_html:{class: "form-control"}, label: false  %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <hr>
        <%= f.submit "Sign in", class: "btn btn-success btn-flat btn-block btn-lg", data: {disable_with: "Signing in..."} %>
      <% end %>
      <br>
    </div>
  </div>
</div>
