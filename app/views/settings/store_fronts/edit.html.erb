<%= simple_form_for @store_front, url: :settings_store_front do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :business_id, input_html: { value: current_user.business_id }, as: :hidden %>
  <%= f.input :merchandise_inventory_account_id, collection: AccountingModule::Asset.all.map{ |a| [a.name, a.id] } %>
  <%= f.input :sales_account_id, collection: AccountingModule::Revenue.all.map{ |a| [a.name, a.id] } %>
  <%= f.input :sales_discount_account_id, collection: AccountingModule::Revenue.all.map{ |a| [a.name, a.id] } %>
  <%= f.input :sales_return_account_id, collection: AccountingModule::Revenue.all.map{ |a| [a.name, a.id] } %>
  <%= f.input :cost_of_goods_sold_account_id, collection: AccountingModule::Expense.all.map{ |a| [a.name, a.id] } %>
  <%= f.submit "Create Store Front", class: "btn btn-primary" %>
<% end %>
