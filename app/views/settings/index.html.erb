<div class="content">
  <div class="col-md-12">
    <div class="card">
      <div class="content">
        <h4>Branches </h4>
          <% Branch.all.each do |branch| %>
          	<%= branch.name %>
          	<br>
          	<br>
          <% end %>
        <br>
          <%=link_to 'New Branch', new_branch_path, class: "btn btn-danger btn-sm" %>
          <hr>
        <h4> Business Info </h4>
          <%= @business.name %>
          <br>
          <%= @business.owner %>
          <br>
          <%= @business.address %>
         <br>
         <br>
         <%= link_to 'Update Business', edit_business_path(@business), class: "btn btn-danger btn-sm" %>
         <hr>
         <h4> Employees </h4>
         <%= link_to 'New Employee', new_user_registration_path, class: "btn btn-danger btn-sm" %>
         <br>
         <br>
         <% @users.each do |user| %>
            <div class="row">
            <div class="col-md-4">
                <%= user.full_name %>
              </div>
              <div class="col-md-4">
                <%= user.email %>
              </div>
              <div class="col-md-2">
                <%= user.role %>
              </div>
              <div class="col-md-2">
                <%=link_to 'Edit Info', edit_user_path(user), class: "btn btn-danger btn-xs" %>
              </div>
            </div>
            <br>
         <% end %>
         <hr>
         <h4 class="title">Import Products </h4>
         <%= simple_form_for @registry, multipart: true, method: :create do |f| %>
         <div class="input-group stylish-input-group">
            <%= f.input :spreadsheet, as: :file %>
            <span class="input-group-btn">
              <%= f.submit 'Import', class: 'form-control btn btn-primary' %>
            </span>
          </div>
        <% end %>
