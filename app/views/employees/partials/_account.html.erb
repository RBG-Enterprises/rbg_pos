<div class="tab-pane" id="employee-account">
  <div class="content">
    <div class="row">
      <div class="col-md-3">
        <% if @employee.cash_on_hand_account.present?  && !@employee.proprietor? %>
          <span class="text-primary"><%= number_to_currency @employee.cash_on_hand_account.balance(recorder_id: @employee.id )  - @employee.fund_transfer_total %> </span>
        <% elsif @employee.cash_on_hand_account.present? && @employee.proprietor? %>
          <span class="text-primary"><%= number_to_currency @employee.cash_on_hand_account.balance(recorder_id: @employee.id )  + AccountingModule::Entry.fund_transfer.total %> </span>
         <% end %>
          <small> CASH ON HAND</small>
          <% if current_user.proprietor? %>
            <%=link_to "New Remittance", new_employee_remittance_path(@employee), class: "btn btn-success btn-sm" %>
          <% end %>
      </div>
    </div>
    <div class="table table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Description</th>
            <th> Details </th>
          </tr>
        </thead>
        <tbody>
          <% @entries.each do |entry| %>
            <tr>
              <td><%=entry.entry_date.strftime("%B %e, %Y")%></td>
              <td><%= entry.description %></td>
              <td>
                <p> DEBIT </p>
                <% entry.debit_amounts.each do |d| %>
                  <div class="row">
                    <div class="col-md-8">
                      <%=d.account.try(:name) %>
                    </div>
                    <div class="col-md-3">
                      <span class="pull-right"><%= number_to_currency d.amount %></span>
                    </div>
                  </div>
                  <br>
                <% end %>
                <p> CREDIT </p>
                <% entry.credit_amounts.each do |d| %>
                  <div class="row">
                    <div class="col-md-8">
                      <%=d.account.try(:name) %>
                    </div>
                    <div class="col-md-3">
                      <span class="pull-right"><%= number_to_currency d.amount %></span>
                    </div>
                  </div>
                  <br>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <center><%= will_paginate @entries %></center>
  </div>
</div>