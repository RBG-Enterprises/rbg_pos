<div class="tab-pane <%= 'active' if current_page? employee_reports_path(@employee) %>">
  <div class="content">
    <%=link_to reports_sales_path(user_id: @employee.id, format: 'pdf', from_date: Time.zone.now.beginning_of_day, to_date: Time.zone.now.end_of_day) do %>
            <p class="category"> Daily Sales </p>
            <small>Generate report of sales for this day <%=Time.zone.now.strftime("%B %e, %Y") %></small>
          <% end %>
          <br>
          <br>
          <%= form_tag({:action => "index", controller: "/reports/sales", format: 'pdf', user_id: @employee.id}, {:method => :get})  do %>
              <div class="row">
                <div class="col-md-3">
                  <div class="form-group">
                    <%= text_field_tag :from_date, @from_date, :class => 'datepicker form-control border-input', :placeholder => "From " %>
                  </div>
                </div>
                <div class="col-md-3">
                  <div clasps="form-group">
                    <%= text_field_tag :to_date, @to_date, :class => 'form-control border-input datepicker', :placeholder => "To " %>
                  </div>
                </div>
                <div class="col-md-1">
                  <button type="submit" class="btn btn-success"> Generate</button>
                </div>
              </div>
            <% end %>
    <hr>
    <%=link_to reports_cash_receipts_path(user_id: @employee.id, format: 'pdf', from_date: Time.zone.now.beginning_of_day, to_date: Time.zone.now.end_of_day) do %>
            <p class="category"> Cash Receipts</p>
            <small>Generate report of cash receipts for this day <%=Time.zone.now.strftime("%B %e, %Y") %></small>
          <% end %>
          <br>
          <br>
          <%= form_tag({:action => "index", controller: "/reports/cash_receipts", format: 'pdf', user_id: @employee.id}, {:method => :get})  do %>
              <div class="row">
                <div class="col-md-3">
                  <div class="form-group">
                    <%= text_field_tag :from_date, @from_date, :class => 'datepicker form-control border-input', :placeholder => "From " %>
                  </div>
                </div>
                <div class="col-md-3">
                  <div clasps="form-group">
                    <%= hidden_field_tag :user_id, @employee.id %>
                    <%= text_field_tag :to_date, @to_date, :class => 'form-control border-input datepicker', :placeholder => "To " %>
                  </div>
                </div>
                <div class="col-md-1">
                  <button type="submit" class="btn btn-success"> Generate</button>
                </div>
              </div>
            <% end %>
            <hr>
            <% if @employee.technician? %>
              <h4> Released Repairs </h4>
              <%= form_tag({:action => "index", controller: "/reports/repairs", format: 'xlsx', user_id: @employee.id}, {:method => :get})  do %>
                  <div class="row">
                    <div class="col-md-3">
                      <div class="form-group">
                        <%= text_field_tag :from_date, @from_date, :class => 'datepicker form-control border-input', :placeholder => "From " %>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div clasps="form-group">
                        <%= hidden_field_tag :user_id, @employee.id %>
                        <%= text_field_tag :to_date, @to_date, :class => 'form-control border-input datepicker', :placeholder => "To " %>
                      </div>
                    </div>
                    <div class="col-md-1">
                      <button type="submit" class="btn btn-success"> Generate</button>
                    </div>
                  </div>
                <% end %>
            <% end %>
  </div>
</div>
