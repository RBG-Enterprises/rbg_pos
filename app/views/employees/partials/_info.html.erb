<div class="tab-pane active" id="employee-info">
  <div class="content">
    <% if current_user.proprietor? %>
      <%= link_to 'Update Info', edit_user_path(@employee), class: "btn btn-warning btn-sm" %>
      <%= link_to 'Withdraw Capital', new_capital_withdrawal_path, class: "btn btn-warning btn-sm" %>
    <% end %>
    <div class="row">
      <div class="col-md-3">
        <% if @employee.cash_on_hand_account.present?  && !@employee.proprietor? %>
          <h3><span class="text-primary"><%= number_to_currency @employee.cash_on_hand_account_balance - @employee.fund_transfer_total %> </span></h3>
        <% elsif @employee.cash_on_hand_account.present? && @employee.proprietor? %>
          <h3><span class="text-primary"><%= number_to_currency @employee.cash_on_hand_account_balance %> </span></h3>
         <% end %>
          <small> CASH ON HAND</small>
          <% if current_user.proprietor? %>
            <%=link_to "New Remittance", new_employee_remittance_path(@employee), class: "btn btn-success btn-sm" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
