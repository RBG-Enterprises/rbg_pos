<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">Bank Account Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @bank_account, url: :accounting_bank_accounts do |f| %>
          <%= f.input :bank_name %>
          <%= f.input :account_number %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :cash_in_bank_account_id, collection: AccountingModule::Asset.all.map{|a| [a.name, a.id] } %>
          <%= f.input :business_id, input_html: { value: current_user.business_id }, as: :hidden %>
          <div class="box-footer">
            <%= f.submit "Save Bank Account", class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  $(document).ready(function() {
    $("#bank_account_cash_in_bank_account_id").select2({
      theme: "bootstrap"
    });
  });
</script>
