<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> <%= @account.account_code %> - <%= @account.name %></h3>
      </div>
      <div class="box-body">
        <h4>Transactions History</h4>
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Reference</th>
                <th>Amount</th>
                <th>Employee</th>
              </tr>
            </thead>
            <tbody>
              <% @entries.each do |entry| %>
                <tr>
                  <td><%= link_to entry.entry_date.strftime("%B %e, %Y"), accounting_entry_path(entry) %></td>
                  <td>
                    <b><%= entry.commercial_document.try(:name) %></b><br>
                    <%= entry.description %>
                  </td>
                  <td><%= entry.reference_number %></td>
                  <td><%= number_to_currency entry.amounts.where(account: @account).sum(&:amount) %></td>
                  <td><%= entry.recorder_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
