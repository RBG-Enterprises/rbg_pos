<% @stocks.each do |stock| %>
<%= stock.name %>
  <%= simple_form_for @line_item, url: :store_front_module_customer_cash_sales_order_line_item_processings do |f| %>
    <%= f.input :quantity %>
    <%= f.input :unit_cost %>
    <%= f.input :total_cost %>
    <%= f.input :bar_code %>
    <%= f.input :cart_id, input_html: { value: current_cart.id }, as: :hidden %>
    <%= f.input :stock_id, input_html: { value: stock.id }, as: :hidden %>
    <%= f.input :unit_of_measurement_id, input_html: { value: stock.unit_of_measurement_id } %>
    <%= f.submit 'Add', id: "add-#{stock.id}" %>
  <% end %>
<% end %>
<%= current_cart.sales_order_line_items.count %>
<% current_cart.sales_order_line_items.each do |line_item| %>
  <%= line_item.stock_name %>
<% end %>
