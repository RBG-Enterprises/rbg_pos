<div class="row">
  <div class="col-md-8">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title"> Sales Return Section </h3><br>
        <span class="text-muted"> Generate sales return on this section </span>
      </div>
      <div class="box-body">
       <% if params[:search].present? %>
        <%=form_tag new_store_front_module_sales_return_order_line_item_processing_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control input-lg", placeholder: "Search Products..." %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-danger btn-lg") do %>
                <i class="fa fa-search"></i> Search
              <% end %>
            </span>
          </div>
        <% end %>
        <% else %>
         <%=form_tag new_store_front_module_sales_return_order_line_item_processing_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], autofocus: true,  class: "form-control input-lg", placeholder: "Search Products..."  %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-danger btn-lg") do %>
                <i class="fa fa-search"></i> Search
              <% end %>
            </span>
          </div>
        <% end %>
      <% end %>
        <br>
        <table class="table table-responsive">
          <tbody>
            <% if @line_items.present? %>
              <%= render 'store_front_module/line_items/sales_return_order_line_item_processings/searched_line_item_results' %>
            <% elsif @products.present? %>
              <%= render 'store_front_module/line_items/sales_return_order_line_item_processings/searched_product_results' %>
            <% end %>
          </tbody>
        </table>
        <hr>
        <% if @sales_return_order_line_items.present? %>
          <p class="text-muted"> ORDER DETAILS </p>
          <div class="table table-responsive">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th><b>QTY</b></th>
                  <th><b>DESCRIPTION</b></th>
                  <th><span class="pull-right"><b>UNIT COST</b></span></th>
                  <th><span class="pull-right"><b>TOTAL COST</b></span></th>
                </tr>
              </thead>
              <tbody>
                <% @cart.sales_return_order_line_items.each do |line_item| %>
                  <tr>
                    <td><%= line_item.quantity %> <%= line_item.unit_code %></td>
                    <td width="300px"><%= line_item.name.try(:titleize) %> <span class="text-muted"><%= line_item.bar_code %></span>
                    </td>
                    <td>
                      <span class="pull-right">
                        <%= number_to_currency line_item.unit_cost %>
                      </span>
                    </td>
                    <td>
                      <span class="pull-right"><%=number_to_currency line_item.total_cost %></span>
                    </td>
                    <td>
                    <%= link_to store_front_module_sales_return_order_line_item_processing_path(line_item), method: :delete do %>
                      <span class="fa fa-trash"></span>
                    <% end %>
                    </td>
                  </tr>
                <% end %>
                <hr>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
    <div class="col-md-4">
      <div class="box box-success">
        <div class="box-body">
        <% if @sales_return_order_line_items.present? %>
          <%= simple_form_for @sales_return_order, url: :store_front_module_sales_return_order_processings do |f| %>
            <%= f.input :customer_id, collection: Customer.all.map{|a| [ a.name, a.id] } %>
            <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
            <%= f.input :description %>
            <%= f.input :reference_number %>
            <%= f.input :cart_id, input_html: { value: @cart.id }, as: :hidden %>
            <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
        <%=f.submit "Save Sales Return", class: "btn btn-danger btn-block btn-lg", :accesskey => "C" %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>

