<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-default">
      <div class="box box-header bg-gray">
        <h3 class="box-title"> <%= @product.name %> Price Details </h3>
      </div>
      <div class="box-body">
      <%= simple_form_for [@product, @selling_price], url: :store_front_module_selling_prices do |f| %>
        <%= f.error_notification %>
        <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
        <%= f.input :selling_price %>
        <%= f.input :product_id, input_html: { value: @product.id }, as: :hidden %>
        <%= f.input :unit_of_measurement_id, input_html: { value: @unit_of_measurement.id }, as: :hidden %>
        <div class="box-footer">
          <%= f.submit "Update Price", class: "btn btn-primary pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
