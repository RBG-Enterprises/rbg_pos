<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
    <div class="box-header">
      <div class="row">
        <div class="col-md-4">
          <h3 class="box-title"> Stock Transfers</h3>
        </div>
        <div class="col-md-5">
        </div>
        <div class="col-md-3">
          <%= link_to 'New Stock Transfer', new_store_front_module_stock_transfer_order_line_item_processing_path, class: "btn btn-primary pull-right" %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="table table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Reference #</th>
              <th>Origin Store Front</th>
              <th>Destination</th>
              <th>Items</th>
              <th>Total Cost</th>
              <th>Employee</th>
            </tr>
          </thead>
          <tbody>
            <% @stock_transfer_orders.order(date: :desc).each do |stock_transfer| %>
              <tr>
                <td><%= link_to stock_transfer.date.strftime("%B %e, %Y"), store_front_module_stock_transfer_path(stock_transfer) %></td>
                <td><%= stock_transfer.reference_number %></td>
                <td><%= link_to stock_transfer.origin_store_front_name, store_front_module_stock_transfer_path(stock_transfer) %></td>
                <td><%= link_to stock_transfer.destination_store_front_name, store_front_module_stock_transfer_path(stock_transfer) %></td>

                <td>
                  <% stock_transfer.line_items.each do |line_item|  %>
                    <div class="row">
                      <div class="col-md-9">
                        <%= line_item.product_name %><br>
                        <small><i><%= line_item.bar_code %></i></small>
                      </div>
                      <div class="col-md-1">
                        <span><%= line_item.quantity %></span>
                      </div>
                    </div>
                    <br>
                  <% end %>
                </td>
                <td><%= number_to_currency stock_transfer.total_cost %></td>
                <td><%= stock_transfer.employee.try(:full_name) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <center><%= will_paginate @stock_transfer_orders %></center>
    </div>
  </div>
</div>
