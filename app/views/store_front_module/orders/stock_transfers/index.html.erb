<div class="container">

    <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-9">
          <h3 class="title-up"> Stock Transfer Orders </h3>


        </div>

        <div class="col-md-3">
          <%= link_to 'New Stock Transfer', new_store_front_module_stock_transfer_order_line_item_processing_path, class: "btn btn-primary float-right" %>
        </div>
      </div>
      <br>
      <small class="title-up"> FILTER BY DESTINATION </small>

        <% StoreFront.all.each do |store_front| %>

              <%= link_to store_front.name, store_front_module_stock_transfers_path(store_front_id: store_front.id), class: 'btn btn-default' %>

        <% end %>
    </div>
  </div>



            <% @stock_transfer_orders.order(date: :desc).each do |stock_transfer| %>

              <%= render 'store_front_module/orders/stock_transfers/order', order: stock_transfer %>

            <% end %>

      <center><%==pagy_bootstrap_nav(@pagy) %></center>

  </div>
</div>
