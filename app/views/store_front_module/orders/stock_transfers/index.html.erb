<div class="container">

    <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-3">
          <h3 class="title-up"> Stock Transfers </h3>


        </div>
        <div class="col-md-5">
          <%=form_tag store_front_module_stock_transfers_path, method: :get, id: "search-form" do %>
              <div class="input-group stylish-input-group">
                <%= text_field_tag :search, params[:search], class: "search-query form-control border-input", placeholder: "Search", type: "search" %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', class: "btn btn-outline-secondary") do %>
                    <i class="icon-magnifier"></i> Search Orders
                  <% end %>
                </span>
              </div>
            <% end %>
        </div>

        <div class="col-md-3">
          <%= link_to 'New Stock Transfer', new_store_front_module_stock_transfer_order_line_item_processing_path, class: "btn btn-primary float-right" %>
        </div>
      </div>
      <br>
      <small class="title-up"> FILTER BY DESTINATION </small>

        <% current_business.store_fronts.each do |store_front| %>

              <%= link_to store_front.name, store_front_module_stock_transfers_path(store_front_id: store_front.id), class: "btn btn-#{'primary' if current_page?(store_front_module_stock_transfers_path(store_front_id: store_front.id))}" %>

        <% end %>
    </div>
  </div>



            <% @stock_transfer_orders.order(date: :desc).each do |stock_transfer| %>
            <%= link_to store_front_module_stock_transfer_path(stock_transfer) do %>


              <%= render 'store_front_module/orders/stock_transfers/order', order: stock_transfer %>
             
              <% end %>

            <% end %>

      <center><%==pagy_bootstrap_nav(@pagy) %></center>

  </div>
</div>
