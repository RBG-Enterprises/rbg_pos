<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <span class="badge bg-secondary"><%= order.origin_store_front_name %></span> <i class="fa fa-arrow-right"></i>
        <span class="badge badge-warning"><%= order.destination_store_front_name %></span>

        &nbsp; &nbsp; <span class="text-muted"><i class="fa fa-calendar"></i> <%= order.date.strftime('%B %e, %Y') %></span>
      </div>
      <div class="col-md-6">

      </div>
    </div>
    <br>

    <% order.purchase_order_line_items.each do |line_item| %>
      <div class="row">
        <div class="col-md-2 offset-md-1">
          <%= line_item.quantity %> <%= line_item.try(:unit_code) %>
        </div>
          <div class="col-md-4">
            <b><%=line_item.product_name %></b><br>
          <small class="text-muted"><%= line_item.bar_code %></small>
        </div>
                  <div class="col-md-2">
                    <span class="text-muted"><%= number_to_currency line_item.unit_cost %></span>
                  </div>
                  <div class="col-md-3">
                    <span class="text-muted"><%= number_to_currency line_item.total_cost %></span>

                  </div>

                </div>
                <hr>
    <% end %>
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <p class="title-up"> TOTAL </p>
      </div>
      <div class="col-md-3">
        <p class="title-up float-right"><%= number_to_currency order.total_cost %></p>
      </div>
    </div>
  </div>
</div>
