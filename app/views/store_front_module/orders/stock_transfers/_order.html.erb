<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <span class="badge bg-secondary"><%= order.origin_store_front_name %></span> <i class="fa fa-arrow-right"></i>
        <span class="badge badge-warning"><%= order.destination_store_front_name %></span>

        &nbsp; &nbsp; <span class="text-muted"><i class="fa fa-calendar"></i> <%= order.date.strftime('%B %e, %Y') %></span>
      </div>
      <div class="col-md-6">
        <%= link_to 'View Order', store_front_module_stock_transfer_path(order), class: 'btn btn-outline-primary float-right' %>
      </div>
    </div>
    <br>
    <p class="title-up"> ITEMS </p>

    <% order.purchase_order_line_items.each do |line_item| %>

    <div class="row">
                  <div class="col-md-2">
                    <%= line_item.quantity %> <%= line_item.try(:unit_code) %>
                  </div>
                  <div class="col-md-5">
                    <b><%=line_item.product_name %></b><br>
                    <small class="text-muted"><%= line_item.bar_code %></small>
                  </div>
                  <div class="col-md-2">
                    <span class="float-right"><%= number_to_currency line_item.total_cost %></span>
                  </div>
                  <div class="col-md-3">
                    <%= number_to_currency line_item.total_cost %>

                  </div>

                </div>
                <hr>
    <% end %>
  </div>
</div>
