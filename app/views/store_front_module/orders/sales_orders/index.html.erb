<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
      <div class="box-header with-border">
        <div class="row">
          <div class="col-md-3">
            <h3 class="box-title"> Sales Orders </h3>
          </div>
          <div class="col-md-5">
          </div>
          <div class="col-md-4">
            <%= link_to 'New Sales', store_index_path, class: "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Customer</th>
                <th>Items</th>
                <th>Total Cost</th>
                <th>Reference</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @sales_orders.each do |sales_order| %>
                <tr>
                  <td><%=link_to sales_order.date.strftime("%B %e, %Y"), store_front_module_sales_order_path(sales_order) %></td>
                  <td><%= link_to sales_order.try(:customer_name), store_front_module_sales_order_path(sales_order) %></td>
                  <td>
                    <% sales_order.sales_order_line_items.each do |line_item| %>
                      <div class="row">
                        <div class="col-md-3">
                          <%= line_item.quantity %>
                        </div>
                        <div class="col-md-6">
                          <%= line_item.name %><br>
                          <small class="text-muted"><%= number_to_currency line_item.unit_cost %></small>
                        </div>
                        <div class="col-md-3">
                          <span class="pull-right"><%= number_to_currency line_item.total_cost %></span>
                        </div>
                      </div>
                    <% end %>
                  </td>
                  <td><%= number_to_currency sales_order.total_cost %></td>
                  <td><%= sales_order.reference_number %></td>
                  <td><%= sales_order.employee.try(:name) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
