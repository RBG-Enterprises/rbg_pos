<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
      <div class="box-header with-border">
        <div class="row">
          <div class="col-md-3">
            <h3 class="box-title"> Purchase Orders </h3>
          </div>
          <div class="col-md-5">
          </div>
          <div class="col-md-4">
            <%= link_to 'New Purchase', new_store_front_module_purchase_order_line_item_processing_path, class: "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Supplier</th>
                <th>Items</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.date.strftime("%B %e, %Y") %></td>
                  <td><%=link_to order.supplier_name, store_front_module_purchase_order_path(order) %></td>
                  <td>
                    <% order.purchase_order_line_items.each do |line_item| %>
                      <div class="row">
                        <div class="col-md-3">
                          <%= line_item.quantity %> <%= line_item.unit_code %>
                        </div>
                        <div class="col-md-6">
                          <%= line_item.name %><br>
                          <small><%= line_item.bar_code %></small><br>
                          <small class="label bg-gray"><%= number_to_currency line_item.unit_cost %></small>
                        </div>
                        <div class="col-md-3">
                          <span class="pull-right"><%= number_to_currency line_item.total_cost %></span>
                        </div>
                      </div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
