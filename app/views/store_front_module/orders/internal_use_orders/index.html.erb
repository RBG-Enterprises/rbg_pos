<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
    <div class="box-header">
      <div class="row">
        <div class="col-md-4">
          <h3 class="box-title"> Internal Use Orders</h3>
        </div>
        <div class="col-md-5">
        </div>
        <div class="col-md-3">
          <%= link_to 'New Internal Use Order', new_store_front_module_internal_use_order_line_item_processing_path, class: "btn btn-primary pull-right" %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="table table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Requisitioning Employee</th>
              <th>Items</th>
              <th>Total Cost</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.order(date: :desc).each do |order| %>
              <tr>
                <td><%= link_to order.date.strftime("%B %e, %Y"), store_front_module_internal_use_order_path(order) %></td>
                <td><%= link_to order.commercial_document.try(:name), store_front_module_internal_use_order_path(order) %></td>
                <td>
                  <% order.internal_use_order_line_items.each do |line_item|  %>
                    <div class="row">
                      <div class="col-md-9">
                        <%= line_item.product_name %><br>
                        <small><i><%= line_item.bar_code %></i></small>
                      </div>
                      <div class="col-md-1">
                        <span><%= line_item.quantity %></span>
                      </div>
                    </div>
                    <br>
                  <% end %>
                </td>
                <td><%= number_to_currency order.total_cost %></td>

              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <center><%= will_paginate @orders %></center>
    </div>
  </div>
</div>
