<div class="row">
  <div class="col-md-12">
    <div class="card card-default">
      <div class="card-header with-border">
        <div class="row">
          <div class="col-md-3">
            <h3 class="subtitle-up"> Vouchers Section </h3>
          </div>
          <div class="col-md-5">
          </div>

        </div>
      </div>
      <div class="card-body">
        <div class="table table-responsive">
          <table class="table table-responsive">
            <thead>
              <tr>
                <th>Date</th>
                <th>Payee</th>
                <th>Description</th>
                <th>Total </th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @vouchers.each do |voucher| %>
                <tr>
                  <td><%= link_to voucher.try(:date).try(:strftime,("%B %e, %Y")), voucher_path(voucher) %></td>
                  <td><%= link_to voucher.try(:payee).try(:name), voucher %></td>
                  <td><%= voucher.description %></td>
                  <td><%= number_to_currency voucher.payable_amount %></td>
                  <td><%= voucher.disbursement_status %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
