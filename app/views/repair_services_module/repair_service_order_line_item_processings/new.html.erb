<div class="row">
  <div class="col-md-7">
    <div class="box box-primary">
      <div class="box-header with-border">
        <div class="row">
          <div class="col-md-6">
            <h4 class="title"><span class="icon-basket-loaded"></span> Repair Services Section (Spare Parts)</h4>
            <p class="category">Search for products to add to repair service</p>
          </div>
          <div class="col-md-6">
          </div>
        </div>
      </div>
      <div class="box-body">
      <%=form_tag new_repair_services_module_work_order_repair_service_order_line_item_processing_path(@work_order), method: :get, id: "search-form" do %>
         <div class="input-group">
           <%= text_field_tag :search, params[:search], class: "search-query form-control border-input", autofocus: true, placeholder: "Search...", type: "search" %>
           <span class="input-group-btn">
             <%= button_tag(type: 'submit', class: "btn btn-dedault") do %>
               <i class="icon-magnifier"></i> Search
             <% end %>
           </span>
         </div>
       <% end %>
       <br>
      <% if @products.present? %>
        <%= render 'repair_services_module/repair_service_order_line_item_processings/searched_product_results' %>
      <% elsif @line_items.present? %>
        <%= render 'repair_services_module/repair_service_order_line_item_processings/searched_line_item_results' %>
      <% end %>
       <div class="table table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Quantity</th>
              <th>Item</th>
              <th>Unit Cost</th>
              <th>Total Cost</th>
            </tr>
          </thead>
          <tbody>
            <% @cart.line_items.each do |line_item| %>
              <tr>
                <td><%= line_item.quantity %></td>
                <td><%=line_item.name %></td>
                <td><%= number_to_currency line_item.unit_cost %></td>
                <td><%= number_to_currency line_item.total_cost %></td>
                <td>
                  <%= link_to repair_services_module_repair_service_order_line_item_processing_path(id: line_item.id, work_order_id: @work_order.id), method: :delete do %>
                    <span class="fa fa-times text-danger" data-toggle="tooltip" title="Remove Item"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <tr>
              <td><b>TOTAL</b></td>
              <td></td>
              <td></td>
              <td><%= number_to_currency @cart.total_cost %></td>
            </tr>
           </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
        <% if @cart.sales_order_line_items.any? %>
        <div class="col-md-5">
          <div class="box box-primary">
            <div class="box-header">
              <div class="row">
                <div class="col-md-9">
                  <h4 class="title"><span class="icon-basket-loaded"></span> Orders</h4>
                </div>
                <div class="col-md-3">
                  <span class="pull-right"><%= link_to 'Empty Cart', cart_path(@cart), method: :delete, class: "btn btn-danger btn-sm" %>
                  </span>
                </div>
              </div>
            </div>
            <div class="box-body">

              <%= simple_form_for [@work_order, @repair_service_order], url: :repair_services_module_work_order_repair_service_order_processings do |f| %>
              <p class="text-muted"> Customer </p>
                <h4><%= @work_order.customer_name %></h4>
                <hr>
              <div class="row">
                <div class="col-md-10 col-md-offset-1">
                  <div class="row">
                <div class="col-md-6">
                  <h4 class="title"> Total </h4>
                </div>
                <div class="col-md-6">
                  <h4 class="title pull-right">
                    <%= number_to_currency @cart.total_cost %>
                  </h4>
                </div>
              </div>
              <hr>

                  <%= f.input :customer_id, input_html: { value: @work_order.customer_id }, as: :hidden %>
                  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
                  <%= f.input :cart_id, input_html: { value: @cart.id }, as: :hidden %>
                  <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
                  <%= f.input :work_order_id, input_html: { value: @work_order.id }, as: :hidden %>''
                  <%= f.submit "Save Order", class: "btn btn-lg btn-success btn-block" %>
                </div>
              </div>
              <% end %>
              <br>
            </div>
        <% end %>
      </div>
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#store_front_module_orders_sales_order_processing_customer_id").select2({
      theme: "bootstrap"
    });
  });
</script>
