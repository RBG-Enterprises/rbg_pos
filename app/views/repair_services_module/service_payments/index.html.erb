<div class="container">

  <div class="card">
    <div class="card-header">
      <h3 class="title-up"> Service Payments </h3>
    </div>
    <div class="card-body">
      <div class="table table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Customer</th>
              <th>Work Order</th>
              <th>Service #</th>
              <th>Description</th>
              <th>Amount</th>
              <th>Employee</th>
            </tr>
          </thead>
          <tbody>
            <% @service_payments.each do |payment| %>
              <% work_order = WorkOrder.find_by(receivable_account_id: payment.credit_amounts.pluck(:account_id)) %>
              <tr>
                <td><%=link_to payment.entry_date.strftime("%B %e, %Y"),computer_repair_section_work_order_path(work_order) %></td>
                <td><%= payment.commercial_document.try(:customer).try(:name) %></td>
                <td><%= payment.commercial_document_name %></td>
                <td><span class="label bg-gray"> <%= payment.commercial_document.try(:formatted_service_number) %></span></td>
                <td><%= payment.description %></td>
                <td><%= number_to_currency payment.total %></td>
                <td><%= payment.recorder_name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <center><%= will_paginate @service_payments %></center>
      </div>
    </div>
  </div>
</div>
