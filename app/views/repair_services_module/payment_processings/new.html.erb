<%= simple_form_for @payment, url: :repair_services_module_work_order_payment_processings do |f| %>
  <%= f.error_notification %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :description %>
  <%= f.input :amount, as: :string %>
  <%= f.input :customer_id, input_html: { value: @work_order.customer_id } %>
  <%= f.input :employee_id, input_html: { value: current_user.id } %>
  <%= f.input :work_order_id, input_html: { value: @work_order.id } %>

  <%= f.submit "Save Payment" %>
<% end %>
