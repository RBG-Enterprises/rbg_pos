<div class="tab-pane <%= 'active' if current_page?(admin_employee_entries_path(@employee)) %>" id="employee-account">
  <div class="content">
    <div class="table table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Description</th>
            <th> Details </th>
          </tr>
        </thead>
        <tbody>
          <% @entries.order(entry_date: :desc).each do |entry| %>
            <tr>
              <td><%=entry.entry_date.strftime("%B %e, %Y")%></td>
              <td><%= entry.description %></td>
              <td>
                <p> DEBIT </p>
                <% entry.debit_amounts.each do |d| %>
                  <div class="row">
                    <div class="col-md-8">
                      <%=d.account.try(:name) %>
                    </div>
                    <div class="col-md-3">
                      <span class="pull-right"><%= number_to_currency d.amount %></span>
                    </div>
                  </div>
                  <br>
                <% end %>
                <p> CREDIT </p>
                <% entry.credit_amounts.each do |d| %>
                  <div class="row">
                    <div class="col-md-8">
                      <%=d.account.try(:name) %>
                    </div>
                    <div class="col-md-3">
                      <span class="pull-right"><%= number_to_currency d.amount %></span>
                    </div>
                  </div>
                  <br>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <center><%= will_paginate @entries %></center>
  </div>
</div>
