<%= simple_form_for @voucher_amount, url: :supplier_voucher_amounts do |f| %>
  <%= f.input :account_id, collection: AccountingModule::Account.all.map{ |a| [ a.name, a.id] } %>
  <%= f.input :amount %>
  <%= f.input :amount_type, collection: Vouchers::VoucherAmount.amount_types.keys.to_a.map{ |a| [ a.titleize, a] } %>
  <%= f.input :supplier_id, input_html: { value: @supplier.id } %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>

<% @supplier.temporary_voucher_amounts.each do |amount| %>
  <%= amount.amount %>
  <%= amount.account_name %>
  <%= amount.amount_type %>
  <%= link_to voucher_amount_path(amount), method: :delete do %>
    <i class="fa fa-trash text-danger"></i>
  <% end %>
<% end %>

<% if @supplier.temporary_voucher_amounts.any? %>
  <%= simple_form_for @voucher, url: :supplier_vouchers do |f| %>
    <%= f.input :reference_number %>
    <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :description %>
    <%= f.input :supplier_id, input_html: { value: @supplier.id } %>
    <%= f.input :preparer_id, input_html: { value: current_user.id } %>
    <%= f.submit "Create Voucher" %>
  <% end %>
<% end %>
