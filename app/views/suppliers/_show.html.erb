
    <div class="card">
      <div class="card-header">

            <h4 class="title-up"><%= @supplier.business_name.try(:upcase) %></h4>
        </div>
      <div class="card-body">
        <ul class="nav nav-pills nav-pills-underline">
          <li class= "nav-item">
            <%= link_to "Info", supplier_path(@supplier), class: "nav-link #{ 'active' if current_page?(supplier_path(@supplier))}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Purchase Orders", supplier_purchase_orders_path(@supplier), class: "nav-link #{ 'active' if current_page?(supplier_purchase_orders_path(@supplier))}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Account", supplier_account_index_path(@supplier), class: "nav-link #{ 'active' if current_page?(supplier_account_index_path(@supplier))}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Vouchers", supplier_vouchers_path(@supplier), class: "nav-link #{ 'active' if current_page?(supplier_vouchers_path(@supplier)) }" %>
          </li>
        </ul>
        <div class="tab-content">
            <% if current_page? supplier_path(@supplier) %>
              <%= render 'suppliers/partials/info' %>
            <% end %>
             <% if current_page? supplier_purchase_orders_path(@supplier) %>
             <%=render 'suppliers/partials/purchase_orders' %>
             <% end %>
             <% if current_page? supplier_vouchers_path(@supplier) %>
             <%= render 'suppliers/partials/vouchers' %>
             <% end %>
             <% if current_page? supplier_account_index_path(@supplier) %>
             <%= render 'suppliers/partials/account' %>
             <% end %>
