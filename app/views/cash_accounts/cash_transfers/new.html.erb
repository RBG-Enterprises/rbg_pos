<div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card card-default">
        <div class="card-header">
            <h3 class="subtitle-up"> Cash Transfer Details </h3>
          </div>
        <div class="card-body">

        <%= simple_form_for @cash_transfer, url: :cash_account_cash_transfers do |f| %>
          <%= f.error_notification %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :reference_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
          <%= f.input :description, input_html: { value: "Cash Transfer" } %>
          <%= f.input :amount %>
          <%= f.input :debit_account_id, collection: User.cash_on_hand_accounts.map{ |a| [a.name, a.id] } %>
          <%= f.input :credit_account_id, input_html: { value: @cash_account.id }, as: :hidden %>
          <%= f.input :employee_id,    input_html: {value: current_user.id }, as: :hidden %>
          <%= f.input :account_number, input_html: {value: SecureRandom.uuid }, as: :hidden %>
          <%= f.submit "Proceed", class: "btn btn-primary float-right" %>
          <br>
          <br>
        <% end %>
