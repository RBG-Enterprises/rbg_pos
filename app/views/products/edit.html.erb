        <div id="category-modal" class="modal fade"></div>

<div class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <div class="header">
          <h4 class="title">Edit Product</h4>
          <p class="category">Details for this new product</p>
        </div> 
      <div class="content">
<%= simple_form_for @product do |f| %>
  <%if @product.avatar.blank? %>
            <center><%=image_tag("default_product_logo.jpg", height: 80, width: 80, :class=>"img-square") %></center>
          <% else %>
            <center><%= image_tag @product.avatar.url(:large), class: 'center-block img-responsive img-rounded'%></center>
          <% end %>
          <center><%= f.input :avatar, as: :file, label: "Product photo" %></center>
  <%= f.input :name %>
  <%= f.input :description %>
  <span><label>Category</label><span class="pull-right"><%= link_to 'New Category', new_category_path, remote: true %></span></span>
  <%= f.input :category_id, label: false, collection: Category.all.map{|a| [a.name, a.id] } %>

  <%= f.input :unit %>
  <%= f.input :retail_price, as: :string %>
  <%= f.input :wholesale_price, as: :string %>
  <div class="row">
  <div class="col-md-6">
      <%=link_to "Cancel", products_path, class: "btn btn-default pull-left" %>
    </div>
    <div class="col-md-6">
      <%= f.submit "Update Product", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
