<div class="tab-pane <%= 'active' if current_page?(product_stocks_path(@product)) %>" id="product-stocks">
                             <div class="content table-responsive table-full-width">
                                <table class="table table-striped">
                                    <thead>

                                      <th>Product</th>
                                      <th>Date Purchased </th>
                                      <th>Quantity</th>
                                      <th>Unit Cost</th>
                                      <th>Total Cost</th>
                                      <th>Supplier</th>
                                      <th></th>
                                    </thead>
                                    <tbody>
                                      <% @stocks.each do |stock| %>
                                      <tr>
                                      <td><%=stock.name %><br>
                                        <% if stock.stock_transfer? %>
                                          <span class="badge bg-gray"><%= stock.origin_store_front_name %> --> <%= stock.destination_store_front_name %> </span>
                                        <% end %>
                                      <small><%= stock.bar_code %></small><br>
                                        <% if stock.sold? %>
                                          <span class="label bg-green"> Sold </span><br>
                                          Customer:
                                          <%= stock.customer %>
                                          <br>
                                          Date Sold:  <%= stock.try(:date_sold).try(:strftime, ("%B %e, %Y")) %>
                                        <% end %>
                                      </td>

                                      <td><%= stock.try(:date).try(:strftime, ("%B %e, %Y")) %></td>

                                      <td><%= stock.quantity %></td>
                                       <% if current_user.proprietor? %>
                                          <td><%= number_to_currency stock.unit_cost %></td>
                                          <td><%= number_to_currency stock.total_cost %></td>
                                      <% end %>


                                      <td><%= stock.try(:supplier_business_name) %></td>
                                      <% if current_user.proprietor? %>
                                      <td><%= link_to "Edit", edit_product_stock_path(id: stock.id, product_id: @product.id), class: "btn btn-warning btn-sm" %>
                                      <% end %>

                                      </tr>
                                      <% end %>
                                    </tbody>
                                  </table>
                                  <center> <%=will_paginate @stocks %></center>

</div>
