        <div id="category-modal" class="modal fade"></div>

<div class="content">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card card-solid">
        <div class="card-header">
          <h4 class="subtitle-up">New Product</h4>
          <p class="help-block">Details for this new product</p>
        </div>
      <div class="card-body">
<%= simple_form_for @product do |f| %>
  <%if @product.avatar.blank? %>
            <center><%=image_tag("default_product_logo.jpg", height: 80, width: 80, :class=>"img-square") %></center>
          <% else %>
            <center><%= image_tag @product.avatar, class: 'center-block img-responsive img-rounded'%></center>
          <% end %>
          <center><%= f.input :avatar, as: :file, label: "Product photo" %></center>
  <%= f.input :name %>
  <%= f.input :description %>
  <span><label>Category</label><span class="float-right"><%= link_to 'New Category', new_category_path, remote: true %></span></span>
  <%= f.input :category_id, label: false, collection: Category.all.map{|a| [a.name, a.id] }, input_html: { class: 'chosen-select' } %>

  <%= f.input :unit %>
  <%#= f.input :retail_price, as: :string %>
  <%#= f.input :wholesale_price, as: :string %>
  <%= f.input :low_stock_count, as: :string, input_html: { value: 0 } %>
  <div class="row">
  <div class="col-md-6">
      <%=link_to "Cancel", products_path, class: "btn btn-default pull-left" %>
    </div>
    <div class="col-md-6">
      <%= f.submit "Create Product", class: "btn btn-primary float-right" %>
    </div>
  </div>
<% end %>
