
<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h4 class="box-title"> Product Details </h4>
        <p class="help-block">details </p>
      </div>
      <div class="box-body">
        <%= simple_form_for @work_order, url: :work_orders, html: { class: "form-horizontal" }, wrapper: :horizontal_form do |f| %>
          <%= f.error_notification %>
          <%= f.input :description %>
          <%= f.input :model_number %>
          <%= f.input :serial_number %>
          <%= f.input :physical_condition %>
          <%= f.input :reported_problem, as: :text %>
          <%= f.submit "Save" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#work_order_customer_id").select2({
      theme: "bootstrap"
    });
  });
</script>
