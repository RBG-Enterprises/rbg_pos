          <li><a href="/computer_repair_section/dashboard"><i class="fa fa-dashboard"></i> <span> Repairs</span></a></li>
          <li><a href="/knowledge_center"><i class="fa fa-circle-o"></i> <span> Knowledge Center</span></a></li>
          <li><a href="/customers"><i class="fa fa-users"></i> <span> Customers</span></a></li>
           <li><a href="/products"><i class="fa fa-cubes"></i> <span> Products</span></a></li>
           <li><a href="/stocks"><i class="fa fa-server"></i> <span> Stocks</span></a></li>
           <li><a href="/repair_services/per_employee_dashboards"><i class="fa fa-tachometer"></i> <span> Dashboard</span></a></li>

        </ul>
    </section>
    <!-- /.sidebar -->
  </aside>
