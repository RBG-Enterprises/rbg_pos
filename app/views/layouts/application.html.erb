<!DOCTYPE html>
<html>
  <head>
    <title>RBG POS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<link rel="stylesheet"
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title><%= full_title(yield(:title)) %></title>
</head>
 <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%= render 'layouts/header' %>
      <aside class="main-sidebar sidebar-collapse sidebar-light-primary elevation-6">
        <%= render 'layouts/brand' %>
        <% if current_user.proprietor? %>
          <%=render 'layouts/sidebar' %>
        <% elsif current_user.warehouse_clerk? %>
          <%= render 'layouts/warehouse_sidebar' %>
        <% elsif current_user.sales_clerk? %>
          <%=render 'layouts/sales_clerk_sidebar' %>
         <% elsif current_user.technician? %>
          <%=render 'layouts/technician_sidebar' %>
        <% end %>
      </aside>
      <div class="content-wrapper">
        <div class="content">
          <div class="content-header">
          </div>
          <div class="container-fluid">
            <%=render "layouts/flash" %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <footer class="main-footer">
      <!-- To the right -->
      <div class="float-right d-none d-sm-block-down">
        RBG POS
      </div>
      <strong>Copyright &copy; <%=Date.current.year %> <a href="http://rbg-enterprises.com">RBG Computers, Cellshop and Enterprises</a>.</strong> All rights reserved.

    </footer>
  </body>
</html>
