<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="header">
          <div class="row">
            <div class="col-md-3">
              <h4 class="title">Branches </h4>
            </div>
            <div class="col-md-6">
            </div>
            <div class="col-md-3">
              <%= link_to "New Branch", new_branch_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="content">
          <div class="table table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                </tr>
              </thead>
              <tbody>
                <% @branches.each do |branch| %>
                  <tr>
                    <td><%= link_to branch.name, branch %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
