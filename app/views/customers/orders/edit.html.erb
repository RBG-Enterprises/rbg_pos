<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card card-warning">
      <div class="card-header">
        <h3 class="subtitle-up"> Update Order Details </h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@customer, @order], url: :customer_order do |f| %>
          <%= f.input :reference_number, label: "CI # / Check #" %>
          <%= f.input :description, label: "PO #" %>
          <div class="card-footer">
            <%= f.submit "Update Order", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
