<div class="row">
  <div class="col-md-3">
    <div class='card card-solid'>
      <div class='card-body'>
        <small>WORK ORDERS</small>
        <h3 class="subtitle-up"> <%= @work_orders.count %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class='card card-solid'>
      <div class='card-body'>
        <small>RELEASES <%= Date.current.strftime("%b. %Y").upcase %></small>
        <h3 class="subtitle-up"> <%= @work_orders.released_on(from_date: Date.current.beginning_of_month, to_date: Date.current.end_of_month).count %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class='card card-solid'>
      <div class='card-body'>
        <small>SERVICE CHARGE PAYMENTS <%= Date.current.strftime("%b. %Y").upcase %></small>
        <h3 class="subtitle-up"> <%= number_to_currency @work_orders.released_on(from_date: Date.current.beginning_of_month, to_date: Date.current.end_of_month).sum(&:service_charge_payments) %></h3>
      </div>
    </div>
  </div>
</div>
  <div class="table table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th> Work Order </th>
          <th> Customer </th>
          <th> Technicians </th>
          <th> Service Charges </th>
        </tr>
      </thead>
      <tbody>
        <% @work_orders.released_on(from_date: Date.current.beginning_of_month, to_date: Date.current.end_of_month).each do |work_order| %>
          <tr>
            <td><%= link_to work_order.product_unit.description, computer_repair_section_work_order_path(work_order) %></td>
            <td><%= work_order.customer.full_name %></td>
            <td><% work_order.technicians.each do |technician| %>
                  <span data-toggle="tooltip" title="<%=technician.first_name %>" data-placement="top">
                    <%= image_tag(technician.avatar, class: "img-circle", height: 35, width: 35) %> &nbsp;
                  </span>
                <% end %>
            </td>
            <td><%= number_to_currency work_order.service_charge_payments %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <center> <%= will_paginate @work_orders %>
  </div>
