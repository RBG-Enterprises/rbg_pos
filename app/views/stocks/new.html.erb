<div id="supplier-modal" class="modal fade"></div>c
<div class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <div class="header">
          <h4 class="title">New Stock</h4>
          <p class="category">New stock details for this product</p>
        </div> 
        <div class="content">
<%= simple_form_for @stock, url: :stocks do |f| %>
  <%= f.error_notification %>
  <%= f.input :product_id, collection: Product.all.order(:name).map{|a| [a.name, a.id] } %>
  <%= f.input :stock_type, collection: Stock.stock_types.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons,  checked: Stock.stock_types.first, input_html: {id: "stock_type"} %>
<span><label>Supplier</label><span class="pull-right"><%= link_to 'New Supplier', new_supplier_registration_path, remote: true %></span></span>
  <%= f.input :supplier_id, collection: Supplier.all.map{|a| [a.business_name, a.id] }, prompt: "Select Supplier", label: false %>

  <%= f.input :quantity %>
  <p> Cost Details </p>
  <%= f.input :unit_cost %>
  <%= f.input :total_cost %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <hr>
  <p> Pricing Details </p>
  <%= f.input :retail_price %>
  <%= f.input :wholesale_price %>
  <%= f.input :barcode %>
  <%= f.input :name, as: :hidden %>
  <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
  <%= f.submit "Save Stock", class: "btn btn-primary" %>
<% end %>
<script>
  $(document).ready(function() {
    $("#stock_product_id").select2({
      theme: "bootstrap"
    });
  });
  $(document).ready(function() {
    $("#stock_supplier_id").select2({
      theme: "bootstrap"
    });
  });
</script>
